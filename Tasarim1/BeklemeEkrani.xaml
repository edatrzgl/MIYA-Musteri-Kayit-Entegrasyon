<Window x:Class="Tasarim1.BeklemeEkrani"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tasarim1"
        mc:Ignorable="d"
        Title="BeklemeEkrani" Height="200" Width="200">
    <Grid>
        <Canvas>
            <!-- Dönme Animasyonu için Yükleme Çemberi -->
            <Ellipse Width="150" Height="150" Stroke="#FFD9DADE" StrokeThickness="5" HorizontalAlignment="Center" VerticalAlignment="Center" Loaded="Ellipse_Loaded">
                <Ellipse.RenderTransform>
                    <RotateTransform x:Name="RotateTransform" CenterX="75" CenterY="75"/>
                </Ellipse.RenderTransform>
            </Ellipse>
        </Canvas>
    </Grid>
</Window>
